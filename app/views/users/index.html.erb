<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%#= link_to '<i class="material-icons">add</i> Do it@'.html_safe, new_user_path, :class => "btn-floating btn-large waves-effect waves-light green" %>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.email%></td>
        <td>
          <%= link_to '<i class="material-icons">mode_edit</i>'.html_safe, edit_user_path(user), class: 'waves-effect waves-light btn yellow darken-1 btn-small' %>
          <%= link_to '<i class="material-icons">delete</i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn red btn-small' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
